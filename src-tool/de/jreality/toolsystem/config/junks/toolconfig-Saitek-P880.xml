<toolconfig>

	<rawdevices>
		<rawdevice id="Gamepad"
			type="de.jreality.toolsystem.raw.DeviceJinputController">
			<prop name="id_string">
				<string>SAITEK P880</string>
			</prop>
		</rawdevice>
	</rawdevices>

	<rawslots>
		<mapping device="Gamepad" src="button_7" target="PrimaryMenu" />
		<mapping device="Gamepad" src="button_2" target="JumpActivation" />
		<mapping device="Gamepad" src="axis_12" target="RightLeftAxis" />
		<mapping device="Gamepad" src="axis_13" target="ForwardBackwardAxis" />
		<mapping device="Gamepad" src="axis_14"
			target="VerticalHeadRotationAngleEvolution" />
		<mapping device="Gamepad" src="axis_15"
			target="HorizontalShipRotationAngleEvolution" />
	</rawslots>

	<virtualdevices>
		<virtualdevice type="de.jreality.toolsystem.virtual.VirtualReverseAxis">
			<inputslot>RightLeftAxis</inputslot>
			<outputslot>LeftRightAxis</outputslot>
		</virtualdevice>
	</virtualdevices>

</toolconfig>