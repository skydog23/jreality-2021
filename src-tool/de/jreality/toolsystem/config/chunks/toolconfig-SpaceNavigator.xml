<toolconfig>

	<rawdevices>
		<rawdevice id="SpaceNavigator"
			type="de.jreality.toolsystem.raw.DeviceJinputController">
			<prop name="id_string">
				<string>.*SpaceNavigator.*</string>
			</prop>
		</rawdevice>
	</rawdevices>

	<rawslots>
		<mapping device="SpaceNavigator" src="axis_0" target="X" />
		<mapping device="SpaceNavigator" src="axis_1" target="Y" />
		<mapping device="SpaceNavigator" src="axis_2" target="Z" />
		<mapping device="SpaceNavigator" src="axis_3" target="RXRaw" />
		<mapping device="SpaceNavigator" src="axis_4" target="RYRaw" />
		<mapping device="SpaceNavigator" src="axis_5" target="RZRaw" />
		<!--
			mapping device="SpaceNavigator" src="button_0"
			target="PrimaryAction"/
		-->
		<mapping device="SpaceNavigator" src="button_7" target="PrimaryMenu" />
	</rawslots>

	<virtualdevices>

		<mapping src="X" target="LeftRightAxis" />
		<mapping src="RZRaw" target="HorizontalShipRotationAngleSpeed" />
		<mapping src="Y" target="ForwardBackwardAxis" />
		<mapping src="RXRaw" target="VerticalHeadRotationAngleSpeed" />
		<!--mapping src="Z" target="JumpActivation" /-->

<!-- 
		<virtualdevice
			type="de.jreality.toolsystem.virtual.VirtualSpaceNavigatorFixAxisFirst">
