<toolconfig>

	<rawdevices>
		<rawdevice id="Gamepad"
			type="de.jreality.toolsystem.raw.DeviceJinputController">
			<prop name="id_string">
				<string>.*P880.*</string>
			</prop>
		</rawdevice>
	</rawdevices>

	<rawslots>
		<!--DragActivation == 'Shoot-Imputslot' -->
		<mapping device="Gamepad" src="button_3" target="key1" />
		<mapping device="Gamepad" src="button_4" target="key2" />

		<mapping device="Gamepad" src="button_7" target="DragActivation" />
		<mapping device="Gamepad" src="button_2" target="JumpActivation" />
		<mapping device="Gamepad" src="axis_12" target="RightLeftAxisRaw" />
		<mapping device="Gamepad" src="axis_13" target="ForwardBackwardAxisRaw" />
		<mapping device="Gamepad" src="axis_14"
			target="VerticalHeadRotationAngleSpeed" />
		<mapping device="Gamepad" src="axis_15"
			target="HorizontalShipRotationAngleSpeed" />
	</rawslots>

	<virtualdevices>

		<virtualdevice type="de.jreality.toolsystem.virtual.VirtualReverseAxis">
			<inputslot>RightLeftAxisRaw</inputslot>
			<outputslot>LeftRightAxisRaw</outputslot>
		</virtualdevice>
	
		<virtualdevice
			type="de.jreality.toolsystem.virtual.VirtualScaleAxis">
			<inputslot>LeftRightAxisRaw</inputslot>
			<outputslot>LeftRightAxis</outputslot>
			<prop name="scale">
				<double>0.5</double>
			</prop>
		</virtualdevice>
	
		<virtualdevice
			type="de.jreality.toolsystem.virtual.VirtualScaleAxis">
			<inputslot>ForwardBackwardAxisRaw</inputslot>
			<outputslot>ForwardBackwardAxis</outputslot>
			<prop name="scale">
				<double>0.5</double>
			</prop>
		</virtualdevice>
	
		<virtualdevice
					type="de.jreality.toolsystem.virtual.VirtualTimestepEvolution">
			<inputslot>VerticalHeadRotationAngleSpeed</inputslot>
			<inputslot>SystemTime</inputslot>
			<outputslot>VerticalHeadRotationAngleEvolution</outputslot>
			<prop name="gain">
				<double>0.5</double>
			</prop>
		</virtualdevice>

		<virtualdevice
					type="de.jreality.toolsystem.virtual.VirtualTimestepEvolution">
			<inputslot>HorizontalShipRotationAngleSpeed</inputslot>
			<inputslot>SystemTime</inputslot>
			<outputslot>HorizontalShipRotationAngleEvolution</outputslot>
			<prop name="gain">
				<double>0.5</double>
			</prop>
		</virtualdevice>
	</virtualdevices>
</toolconfig>