<toolconfig>

  <rawdevices>
    <!--rawdevice id="Motionstar" type="de.jreality.toolsystem.raw.DeviceMotionstar"/-->
    <rawdevice id="Trackd" type="de.jreality.toolsystem.raw.DevicePortalTrackd"/>
    <!--rawdevice id="Keyboard" type="de.jreality.toolsystem.raw.DeviceKeyboard"/-->
    <!--rawdevice id="Mouse" type="de.jreality.toolsystem.raw.DeviceMouse"/-->
    <rawdevice id="SystemTimer" type="de.jreality.toolsystem.raw.DeviceSystemTimer"/>
    <!--rawdevice id="Joystick" type="de.jreality.toolsystem.raw.DeviceJoystick"/-->
  </rawdevices>

  <rawslots>

    <mapping device="SystemTimer" src="tick" target="SystemTime"/>
    
    <mapping device="Trackd" src="button_0" target="PrimaryAction"/>
    <mapping device="Trackd" src="button_1" target="PrimaryMenu"/>
    <mapping device="Trackd" src="button_2" target="PrimarySelection"/>
    <mapping device="Trackd" src="button_3" target="PanelActivation"/>
    <mapping device="Trackd" src="button_4" target="JumpActivation"/>
    <mapping device="Trackd" src="button_5" target="GravityToggle"/>
    
    <mapping device="Trackd" src="valuator_0" target="PrimaryNavigationNDC_X"/>
    <mapping device="Trackd" src="valuator_1" target="PrimaryNavigationNDC_Y"/>
    <mapping device="Trackd" src="sensor_0" target="PointerShipTransformation"/>
    <mapping device="Trackd" src="sensor_1" target="ShipHeadTransformation"/>
    
    
    
  </rawslots>
  
  <virtualdevices/>
  
</toolconfig>
