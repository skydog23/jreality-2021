<toolconfig>

  <rawdevices>
    <rawdevice id="Keyboard" type="de.jreality.scene.tool.DeviceKeyboard"/>
    <rawdevice id="Mouse" type="de.jreality.scene.tool.DeviceMouse"/>
    <rawdevice id="SystemTimer" type="de.jreality.scene.tool.DeviceSystemTimer"/>
    <!--rawdevice id="Motionstar" type="de.jreality.scene.tool.DeviceMotionstar"/-->
    <!--rawdevice id="Joystick" type="de.jreality.scene.tool.DeviceJoystick"/-->
  </rawdevices>

  <rawslots>

  <!-- map slots of raw devices to InputSlots -->
  
    <mapping device="Keyboard" src="VK_W" target="forward"/>
    <mapping device="Keyboard" src="VK_SPACE" target="JumpActivation"/>
    <mapping device="Keyboard" src="VK_R" target="DrawPickActivation"/>
    <mapping device="Keyboard" src="VK_S" target="backward"/>
    <mapping device="Keyboard" src="VK_A" target="left"/>
    <mapping device="Keyboard" src="VK_D" target="right"/>
    <mapping device="Keyboard" src="VK_P" target="ShowPick"/>
    <mapping device="Keyboard" src="VK_E" target="EncompassActivation"/>
    <mapping device="Keyboard" src="VK_0" target="IncreaseSpeed"/>
    <mapping device="Keyboard" src="VK_9" target="DecreaseSpeed"/>
    <mapping device="Mouse" src="left" target="PrimaryAction"/>
    <mapping device="Mouse" src="left_shift" target="SecondaryAction"/>
    <mapping device="Mouse" src="right" target="PrimarySelection"/>
    <mapping device="Mouse" src="right_shift" target="SecondarySelection"/>
    <mapping device="Mouse" src="center" target="PrimaryMenu"/>
    <mapping device="Mouse" src="center_shift" target="SecondaryMenu"/>
    <mapping device="Mouse" src="wheel_up" target="PrimaryUp"/>
    <mapping device="Mouse" src="wheel_down" target="PrimaryDown"/>
    <mapping device="Mouse" src="axes" target="PointerNDC"/>
    
    <mapping device="SystemTimer" src="tick" target="SystemTime"/>
    <mapping device="Motionstar" src="wand_left" target="PrimaryAction"/>
    <mapping device="Motionstar" src="wand_center" target="PrimaryMenu"/>
    <mapping device="Motionstar" src="wand_right" target="PrimarySelection"/>
    <mapping device="Motionstar" src="wand_axes" target="PrimaryNavigationNDC"/>
    <mapping device="Motionstar" src="wandMatrix" target="PointerTransformation"/>
    <mapping device="Motionstar" src="headMatrix" target="AvatarTransformation"/>
    <mapping device="Joystick" src="axis_1" target="ForwardBackwardAxis"/>
    <mapping device="Joystick" src="axis_0" target="RightLeftAxis"/>
    <mapping device="Joystick" src="button_0" target="IncreaseSpeed"/>
    <mapping device="Joystick" src="button_1" target="DecreaseSpeed"/>
  </rawslots>
  
  
  <virtualdevices>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>PrimaryAction</inputslot>
      <outputslot>RotateActivation</outputslot>
    </virtualdevice>

    <!-- rotate with SecondaryAction if PrimaryAction is overloaded (i.e. dragging) -->
    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>SecondaryAction</inputslot>
      <outputslot>RotateActivation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>PrimaryDown</inputslot>
      <outputslot>backward</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>PrimaryMenu</inputslot>
      <outputslot>DragActivation</outputslot>
    </virtualdevice>

    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>PrimarySelection</inputslot>
      <outputslot>ShipRotateActivation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualRotation">
      <inputslot>PointerNDC</inputslot>
      <inputslot>CameraToWorld</inputslot>
      <outputslot>TrackballTransformation</outputslot>
      <prop name="gain">
        <double>3.14</double>
      </prop>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualEvolutionOperator">
      <inputslot>PointerTransformation</inputslot>
      <outputslot>PointerEvolution</outputslot>
    </virtualdevice>

    <virtualdevice type="de.jreality.scene.tool.VirtualEvolutionOperator">
      <inputslot>PointerNDC</inputslot>
      <outputslot>PointerNdcEvolution</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualExtractAxis">
      <inputslot>PointerNdcEvolution</inputslot>
      <outputslot>HorizontalShipRotationAngleEvolution</outputslot>
      <prop name="axis">
        <string>translationX</string>
      </prop>
    </virtualdevice>

    <virtualdevice type="de.jreality.scene.tool.VirtualExtractAxis">
      <inputslot>PointerNdcEvolution</inputslot>
      <outputslot>VerticalHeadRotationAngleEvolution</outputslot>
      <prop name="axis">
        <string>translationY</string>
      </prop>
    </virtualdevice>

    <virtualdevice type="de.jreality.scene.tool.VirtualRotationAboutAxis">
      <inputslot>HorizontalShipRotationAngleEvolution</inputslot>
      <outputslot>HorizontalShipRotationEvolution</outputslot>
        <prop name="axis"><string>Y-axis</string></prop>
	<prop name="gain"><double>-3</double></prop>
        <!--array class="double" length="3">
          <void index="0"><double>0</double></void>
          <void index="1"><double>1</double></void>
          <void index="2"><double>0</double></void>
	</array-->
</virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualRotationAboutAxis">
      <inputslot>VerticalHeadRotationAngleEvolution</inputslot>
      <outputslot>VerticalHeadRotationEvolution</outputslot>
        <prop name="axis"><string>X-axis</string></prop>
	<prop name="gain"><double>3</double></prop>
        <!--array class="double" length="3">
          <void index="0"><double>0</double></void>
          <void index="1"><double>1</double></void>
          <void index="2"><double>0</double></void>
	</array-->
</virtualdevice>

<virtualdevice type="de.jreality.scene.tool.VirtualExtractRotationTrafo">
      <inputslot>PointerTransformation</inputslot>
      <outputslot>PointerRotation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualExtractTranslationTrafo">
      <inputslot>PointerTransformation</inputslot>
      <outputslot>PointerTranslation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualEvolutionOperator">
      <inputslot>PointerRotation</inputslot>
      <outputslot>LookRotation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualEvolutionOperator">
      <inputslot>PointerTranslation</inputslot>
      <outputslot>DeltaTranslation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualInvertMatrix">
      <inputslot>CameraToNDC</inputslot>
      <outputslot>NDCToCamera</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualInvertMatrix">
      <inputslot>WorldToCamera</inputslot>
      <outputslot>CameraToWorld</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualProductMatrix">
      <inputslot>CameraToNDC</inputslot>
      <inputslot>WorldToCamera</inputslot>
      <outputslot>WorldToNDC</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualProductMatrix">
      <inputslot>CameraToWorld</inputslot>
      <inputslot>NDCToCamera</inputslot>
      <outputslot>NDCToWorld</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMousePointerTrafo">
      <inputslot>NDCToWorld</inputslot>
      <inputslot>PointerNDC</inputslot>
      <outputslot>PointerTransformation</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMergedAxis">
      <inputslot>forward</inputslot>
      <inputslot>backward</inputslot>
      <outputslot>ForwardBackwardAxis</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMergedAxis">
      <inputslot>right</inputslot>
      <inputslot>left</inputslot>
      <outputslot>LeftRightAxis</outputslot>
    </virtualdevice>
    
    <virtualdevice type="de.jreality.scene.tool.VirtualReverseAxis">
      <inputslot>RightLeftAxis</inputslot>
      <outputslot>LeftRightAxis</outputslot>
    </virtualdevice>

    <!-- big example for passing config properties -->
    
    <virtualdevice type="de.jreality.scene.tool.VirtualMap">
      <inputslot>PrimaryUp</inputslot>
      <outputslot>forward</outputslot>
      <!-- example of how to pass a string -->
      <prop name="foo">
        <string>bla</string>
      </prop>
      <!-- example of how to pass an int-->
      <prop name="bar">
        <int>42</int>
      </prop>
      <!-- example of how to pass a double -->
      <prop name="baz">
        <double>3.14</double>
      </prop>
      <!-- example of how to pass a color -->
      <prop name="coolColor">
        <object class="java.awt.Color">
          <int>123</int>
          <int>55</int>
          <int>76</int>
          <int>200</int>
        </object>
      </prop>
      <!-- example of how to pass a matrix -->
      <prop name="matrix">
        <object class="de.jreality.util.Matrix">
          <array class="double" length="16">
            <void index="0"><double>1</double></void>
            <void index="1"><double>0</double></void>
            <void index="2"><double>0</double></void>
            <void index="3"><double>3</double></void>
            <void index="4"><double>0</double></void>
            <void index="5"><double>1</double></void>
            <void index="6"><double>0</double></void>
            <void index="7"><double>3</double></void>
            <void index="8"><double>0</double></void>
            <void index="9"><double>0</double></void>
            <void index="10"><double>1</double></void>
            <void index="11"><double>3</double></void>
            <void index="12"><double>0</double></void>
            <void index="13"><double>0</double></void>
            <void index="14"><double>0</double></void>
            <void index="15"><double>1</double></void>
          </array>
        </object>
      </prop>
      <!-- example of how to pass an array -->
      <prop name="array">
        <array class="double" length="7">
          <void index="0"><double>1</double></void>
          <void index="1"><double>0</double></void>
          <void index="2"><double>0</double></void>
          <void index="3"><double>3</double></void>
          <void index="4"><double>0</double></void>
          <void index="5"><double>1</double></void>
          <void index="6"><double>0</double></void>
          <void index="7"><double>3</double></void>
        </array>
      </prop>
    </virtualdevice>

  </virtualdevices>
</toolconfig>
